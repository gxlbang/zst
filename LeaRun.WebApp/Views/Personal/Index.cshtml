</div>
<div id="dialogBg"></div>
<div id="dialog" class="animated">
    <a href="modify-password.html" class="my-paw bbot">修改密码</a>
    <a href="javascript:;" class="my-paw btn-close">退出</a>
    <i class="icon-top"></i>
</div>
<script src="~/Content/Scripts/jqthumb.min.js"></script>
<script src="~/Content/Scripts/menu.js"></script>
<script src="~/Content/Scripts/leftnav.js"></script>
<script>
    $(function () {
        $('.my-img img').jqthumb({
            width: 2.8,
            height: 2.8,
        });
    });

    var w, h, className;
    function getSrceenWH() {
        w = $(window).width();
        h = $(window).height();
        $('#dialogBg').width(w).height(h);
    }

    window.onresize = function () {
        getSrceenWH();
    }
    $(window).resize();

    $(function () {
        getSrceenWH();

        //显示弹框
        $('.my-cright').click(function () {
            className = $(this).attr('class');
            $('#dialogBg').fadeIn(300);
            $('#dialog').removeAttr('class').addClass('animated ' + className + '').fadeIn();
        });

        //关闭弹窗
        $('.btn-close').click(function () {
            $('#dialogBg').fadeOut(300, function () {
                $('#dialog').addClass('bounceOutUp').fadeOut();
            });
        });
    });


</script>
