@{
    ViewBag.Title = "Ho_Assistant》明细页面";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}
<script type="text/javascript">
    $(function () {
        InitControl();
    })
    //得到一个对象实体
    function InitControl() {
        if (!!GetQuery('KeyValue')) {
            AjaxJson("/HouseModule/Ho_Assistant/SetForm", { KeyValue: GetQuery('KeyValue') }, function (data) {
                SetWebControls(data);
                $("#pimg").attr("src", data.HeadImg);
            });
        }
    }
</script>
<form id="form1" style="margin: 1px">
    <table class="form">
        <tr>
            <th class='formTitle'>姓名：</th>
            <td class='formValue'>
                <input id="Name" maxlength=50 type="text" class="txt" />
            </td>
            <th width="10"></th>
            <td class='formValue' rowspan="5">
                <img src="~/Content/Images/noimg.gif" id="pimg" width="150" height="150" />
            </td>
        </tr>
        <tr>
            <th class='formTitle'>性别：</th>
            <td class='formValue'>
                <input id="Sex" maxlength=50 type="text" class="txt" />
            </td>
        </tr>
        <tr>
            <th class='formTitle'>微信号：</th>
            <td class='formValue'>
                <input id="Weixin" maxlength=50 type="text" class="txt" />
            </td>
        </tr>
        <tr>
            <th class='formTitle'>手机号：</th>
            <td class='formValue'>
                <input id="Mobile" maxlength=50 type="text" class="txt" />
            </td>
        </tr>
        <tr>
            <th class='formTitle'>二维码：</th>
            <td class='formValue'>
                <input id="HeadImg" maxlength=256 type="text" class="txt" />
            </td>
        </tr>
        <tr>
            <th class='formTitle'>说明：</th>
            <td class='formValue' colspan="3">
                <input id="Appraise" maxlength=256 type="text" class="txt" />
            </td>
        </tr>
        <tr>
            <th class='formTitle'>备注：</th>
            <td class='formValue' colspan="3">
                <textarea id="Remark" name="Remark" maxlength="600" class="txtArea" rows="18"></textarea>
            </td>
        </tr>
        <tr></tr>
    </table>
</form>
