@{
    ViewBag.Title = "Am_AmmeterType";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script type="text/javascript">
    $(function () {
        GetGrid();
    })
    //加载表格
    function GetGrid() {
        $("#gridTable").jqGrid({
            url: "@Url.Content("~/HouseModule/Am_AmmeterType/GridPageJson")",
            datatype: "json",
            height: $(window).height() - 149,
            autowidth: true,
            colModel: [
                    { label: 'Number', name: 'Number', index: 'Number', width: 0, align: 'left', hidden: true },
                    { label: '名称', name: 'Name', index: 'Name', width: 150, align: 'left' },
                    { label: '接线方式', name: 'Jxfs', index: 'Jxfs', width: 100, align: 'left', sortable: true },
                    { label: '通讯规约', name: 'Txgy', index: 'Txgy', width: 150, align: 'left', sortable: true },
                    { label: '电价类型', name: 'Djlx', index: 'Djlx', width: 0, align: 'left', sortable: true },
                    { label: '阶梯类型', name: 'Jtlx', index: 'Jtlx', width: 0, align: 'left', sortable: true },
                    { label: '电表类型', name: 'Dblx', index: 'Dblx', width: 0, align: 'left', sortable: true },
                    { label: '权限', name: 'Qx', index: 'Qx', width: 0, align: 'left', sortable: true },
                    { label: '密码', name: 'PASSWORD', index: 'PASSWORD', width: 0, align: 'left', sortable: true },
                    { label: '其他类型', name: 'OtherType', index: 'OtherType', width: 0, align: 'left', sortable: true },
                    { label: '用户编号', name: 'UserNumber', index: 'UserNumber', width: 0, align: 'left', sortable: true },
                    { label: '用户名', name: 'UserName', index: 'UserName', width: 0, align: 'left', sortable: true },
                    { label: '姓名', name: 'UserRealName', index: 'UserRealName', width: 0, align: 'left', sortable: true },
                    { label: '备注', name: 'Remark', index: 'Remark', width: 0, align: 'left', sortable: true },
            ],
            pager: "#gridPager",
            sortname: '',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
        });
    }
    //新增
    function btn_add() {
        var url = "/HouseModule/Am_AmmeterType/Form"
        openDialog(url, "Form", "新增电表类型", 770, 395, function (iframe) {
            top.frames[iframe].AcceptClick()
        });
    }
    //编辑
    function btn_edit() {
        var KeyValue = GetJqGridRowValue("#gridTable", "Number");
        if (IsChecked(KeyValue)) {
            var url = "/HouseModule/Am_AmmeterType/Form?KeyValue=" + KeyValue;
            openDialog(url, "Form", "编辑电表类型", 770, 395, function (iframe) {
                top.frames[iframe].AcceptClick();
            });
        }
    }
    //删除
    function btn_delete() {
        var KeyValue = GetJqGridRowValue("#gridTable", "Number");
        if (IsDelData(KeyValue)) {
            var delparm = 'KeyValue=' + KeyValue;
            delConfig('/HouseModule/Am_AmmeterType/Delete', delparm, KeyValue.split(",").length);
        }
    }
    //明细
    function btn_detail() {
        var KeyValue = GetJqGridRowValue("#gridTable", "Number");
        if (IsChecked(KeyValue)) {
            var url = "/HouseModule/Am_AmmeterType/Detail?KeyValue=" + KeyValue;
            Dialog(url, "Detail", "电表类型明细", 820, 500, function (iframe) {
                top.frames[iframe].AcceptClick();
            });
        }
    }
    //刷新
    function windowload() {
        $("#gridTable").trigger("reloadGrid"); //重新载入

    }
    //搜索
    function btn_Search() {
        var keywords = $("#keywords").val();
        $("#gridTable").jqGrid('setGridParam', {
            url: "@Url.Content("~/HouseModule/Am_AmmeterType/GridPageListJson")?Keyword=" + keywords, page: 1
        }).trigger('reloadGrid');
    }
</script>
<!--工具栏-->
<div class="tools_bar leftline rightline" style="margin: 1px; margin-bottom: 0px;">
    <div class="PartialButton">
        @Html.Partial("_PartialButton")
    </div>
</div>
<div class="leftline rightline QueryArea" style="margin: 1px; margin-top: 0px; margin-bottom: 0px;">
    <table border="0" class="form-find" style="height: 45px;">
        <tr>
            <th>关键字：</th>
            <td>
                <input id="keywords" type="text" class="txt" style="width: 200px" />
            </td>
            <td>
                <input id="btnSearch" type="button" class="btnSearch" value="搜 索" onclick="btn_Search()" />
            </td>
        </tr>
    </table>
</div>
<div class="topline rightline" style="margin: 1px; margin-top: -1px;">
    <table id="gridTable"></table>
    <div id="gridPager"></div>
</div>
