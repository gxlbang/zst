@{
    ViewBag.Title = "Fx_WebAdv》表单页面";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}
<!--上传文件组件start-->
<link href="~/Content/Scripts/uploadify/uploadify.css" rel="stylesheet" />
<script src="~/Content/Scripts/uploadify/jquery.uploadify.js"></script>
<script type="text/javascript">
    //上传文件
    function uploadify() {
        $("#uploadify").uploadify({
            uploader: '/HouseModule/Ho_HouseInfo/ImgUpload',
            swf: '/Content/Scripts/uploadify/uploadify.swf',
            buttonText: "上传图片",
            height: 24,
            width: 70,
            removeCompleted: true,               // 上传成功后移除进度条
            removeTimeout: 0,
            onFallback: function () {
                alert("您未安装FLASH控件，无法上传！请安装FLASH控件后再试。");
            },
            onUploadSuccess: function (file, data, response) {
                var DataJson = JSON.parse(data);
                $("#pimg").attr("src", DataJson.Path);
                $("#AdvImg").val(DataJson.Path);
            }
        });
    }
</script>
<script type="text/javascript">
    var KeyValue = GetQuery('KeyValue');//主键
    $(function () {
        InitControl();
        uploadify();
    })
    //得到一个对象实体
    function InitControl() {
        if (!!GetQuery('KeyValue')) {
            AjaxJson("/WebModule/Fx_WebAdv/SetForm", { KeyValue: KeyValue }, function (data) {
                SetWebControls(data);
            });
        }
    }
    //保存事件
    function AcceptClick() {
        if (!CheckDataValid('#form1')) {
            return false;
        }
        var postData = GetWebControls("#form1");
        AjaxJson("/WebModule/Fx_WebAdv/SubmitForm?KeyValue=" + KeyValue, postData, function (data) {
            tipDialog(data.Message, 3, data.Code);
            top.frames[tabiframeId()].windowload();
            closeDialog();
        });
    }
</script>
<form id="form1" style="margin: 1px">
    <div id="message" style="display: none"></div>
    <table class="form">
        <tr>
            <th class='formTitle'>广告标题：</th>
            <td class='formValue'>
                <input id="Title" maxlength=128 type="text" class="txt"   />
            </td>
            <th width="10"></th>
            <td class='formValue' rowspan="5">
                <img src="~/Content/Images/noimg.gif" id="pimg" width="150" height="150" />
            </td>
        </tr>
        <tr>
            <th class='formTitle'>广告描述：</th>
            <td class='formValue'>
                <input id="AdvDes" maxlength=256 type="text" class="txt" />
            </td>
        </tr>
        <tr>
            <th class='formTitle'>广告链接：</th>
            <td class='formValue'>
                <input id="AdvLink" maxlength=256 type="text" class="txt" />
            </td>
        </tr>
        <tr>
            <th class='formTitle'>广告图片：</th>
            <td class='formValue'>
                <input id="uploadify" name="uploadify" type="file" />
                <input id="AdvImg" type="hidden" />
            </td>
        </tr>
        
        <tr>
            <th class='formTitle'>广告状态：</th>
            <td class='formValue'>
                <select id="Status" class="txtselect">
                    <option value="1">正常</option>
                    <option value="0">禁用</option>
                </select>
            </td>
        </tr>
        <tr>
            <th class='formTitle'>Js文件：</th>
            <td class='formValue' colspan="3">
                <input id="JsFile" maxlength=128 type="text" class="txt" />
            </td>
        </tr>
        <tr>
            <th class='formTitle'>广告宽度：</th>
            <td class='formValue' colspan="3">
                <input id="Width" maxlength=5 type="text" class="txt" />
            </td>
        </tr>
        <tr>
            <th class='formTitle'>广告高度：</th>
            <td class='formValue' colspan="3">
                <input id="Height" maxlength=5 type="text" class="txt" />
            </td>
        </tr>
        <tr>
            <th class='formTitle'>备注：</th>
            <td class='formValue' colspan="3">
                <textarea id="Remark" name="Remark" maxlength="600" class="txtArea" rows="9"></textarea>
            </td>
        </tr>
        <tr>
        </tr>
    </table>
</form>
