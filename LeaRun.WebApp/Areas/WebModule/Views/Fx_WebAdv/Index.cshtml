@{
    ViewBag.Title = "Fx_WebAdv";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script type="text/javascript">
    $(function () {
        GetGrid();
    })
    //加载表格
    function GetGrid() {
        $("#gridTable").jqGrid({
        url: "@Url.Content("~/WebModule/Fx_WebAdv/GridPageJson")",
        datatype: "json",
        height: $(window).height() - 149,
        autowidth: true,
        colModel: [
                { label: 'Number', name: 'Number', index: 'Number', width: 0, align: 'left',sortable: true  },
                { label: 'Title', name: 'Title', index: 'Title', width: 0, align: 'left',sortable: true  },
                { label: 'AdvDes', name: 'AdvDes', index: 'AdvDes', width: 0, align: 'left',sortable: true  },
                { label: 'AdvImg', name: 'AdvImg', index: 'AdvImg', width: 0, align: 'left',sortable: true  },
                { label: 'AdvLink', name: 'AdvLink', index: 'AdvLink', width: 0, align: 'left',sortable: true  },
                { label: 'CreateTime', name: 'CreateTime', index: 'CreateTime', width: 0, align: 'left',sortable: true  },
                { label: 'Status', name: 'Status', index: 'Status', width: 0, align: 'left',sortable: true  },
                { label: 'IsDel', name: 'IsDel', index: 'IsDel', width: 0, align: 'left',sortable: true  },
                { label: 'JsFile', name: 'JsFile', index: 'JsFile', width: 0, align: 'left',sortable: true  },
                { label: 'Width', name: 'Width', index: 'Width', width: 0, align: 'left',sortable: true  },
                { label: 'Height', name: 'Height', index: 'Height', width: 0, align: 'left',sortable: true  },
                { label: 'Remark', name: 'Remark', index: 'Remark', width: 0, align: 'left',sortable: true  },
        ],
        pager: "#gridPager",
        sortname: '',
        sortorder: 'desc',
        rownumbers: true,
        shrinkToFit: false,
        gridview: true,
    });
}
    //新增
    function btn_add() {
        var url = "/WebModule/Fx_WebAdv/Form"
        openDialog(url, "Form", "新增Fx_WebAdv", 770, 395, function (iframe) {
            top.frames[iframe].AcceptClick()
        });
    }
    //编辑
    function btn_edit() {
        var KeyValue = GetJqGridRowValue("#gridTable", "Number");
        if (IsChecked(KeyValue)) {
            var url = "/WebModule/Fx_WebAdv/Form?KeyValue=" + KeyValue;
            openDialog(url, "Form", "编辑Fx_WebAdv", 770, 395, function (iframe) {
                top.frames[iframe].AcceptClick();
            });
        }
    }
    //删除
    function btn_delete() {
        var KeyValue = GetJqGridRowValue("#gridTable", "Number");
        if (IsDelData(KeyValue)) {
            var delparm = 'KeyValue=' + KeyValue;
            delConfig('/WebModule/Fx_WebAdv/Delete', delparm, KeyValue.split(",").length);
        }
    }
    //明细
    function btn_detail() {
        var KeyValue = GetJqGridRowValue("#gridTable", "Number");
        if (IsChecked(KeyValue)) {
            var url = "/WebModule/Fx_WebAdv/Detail?KeyValue=" + KeyValue;
            Dialog(url, "Detail", "Fx_WebAdv明细", 820, 500, function (iframe) {
                top.frames[iframe].AcceptClick();
            });
        }
    }
    //刷新
    function windowload() {
        $("#gridTable").trigger("reloadGrid"); //重新载入
        
    }
</script>
<!--工具栏-->
<div class="tools_bar leftline rightline" style="margin: 1px; margin-bottom: 0px;">
    <div class="PartialButton">
        @Html.Partial("_PartialButton")
    </div>
</div>
<div class="leftline rightline QueryArea" style="margin: 1px; margin-top: 0px; margin-bottom: 0px;">
    <table border="0" class="form-find" style="height: 45px;">
        <tr>
            <th>关键字：</th>
            <td>
                <input id="keywords" type="text" class="txt" style="width: 200px" />
            </td>
            <td>
                <input id="btnSearch" type="button" class="btnSearch" value="搜 索" onclick="btn_Search()" />
            </td>
        </tr>
    </table>
</div>
<div class="topline rightline" style="margin: 1px; margin-top: -1px;">
    <table id="gridTable"></table>
    <div id="gridPager"></div>
</div>
