@{
    ViewBag.Title = "合伙人";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script type="text/javascript">
    $(function () {
        GetGrid();
    })
    //加载表格
    function GetGrid() {
        $("#gridTable").jqGrid({
        url: "@Url.Content("~/HouseModule/Ho_PartnerUser/GridPageJson")",
        datatype: "json",
        height: $(window).height() - 149,
        autowidth: true,
        colModel: [
                { label: '主键', name: 'Number', index: 'Number', width: 0, align: 'left', hidden: true },
                { label: '上级编号', name: 'ParentNumber', index: 'ParentNumber', width: 0, align: 'left', hidden: true },
                 {
                     label: '主图', name: 'HeadImg', index: 'HeadImg', width: 60, align: 'left',
                     formatter: function (cellvalue, options, rowObject) {
                         if (cellvalue) {
                             return "<div style='padding:1px;'><img src='" + cellvalue + "' width='48' height='48' /></div>";
                         } else {
                             return "<div style='padding:1px;'><img src='/Content/Images/noimg.gif' width='48' height='48'/></div>";
                         }
                     }
                 },
                { label: '姓名', name: 'Name', index: 'Name', width: 100, align: 'left'  },
                { label: '身份证号', name: 'CardCode', index: 'CardCode', width: 180, align: 'left' },
                { label: '手机号', name: 'Mobile', index: 'Mobile', width: 150, align: 'left'  },
                { label: '微信帐号', name: 'WeiXin', index: 'WeiXin', width: 150, align: 'left'  },
                {
                    label: "创建时间", name: "CreatTime", index: "CreatTime", width: 150,
                    formatter: function (value, options, rowObject) {
                        return formatDate(value, 'yyyy-MM-dd hh:mm:ss');
                    }
                },
                { label: '状态字符', name: 'StatusStr', index: 'StatusStr', width: 80, align: 'left'  },
                { label: '上级名称', name: 'ParentName', index: 'ParentName', width: 100, align: 'left' },
                { label: '私人助理', name: 'As_Name', index: 'As_Name', width: 100, align: 'left' },
                { label: '备注', name: 'Remark', index: 'Remark', width: 250, align: 'left'  },
        ],
        pager: "#gridPager",
        sortname: 'CreatTime',
        sortorder: 'desc',
        rownumbers: true,
        shrinkToFit: false,
        gridview: true,
    });
}
    //编辑
    function btn_edit() {
        var KeyValue = GetJqGridRowValue("#gridTable", "Number");
        if (IsChecked(KeyValue)) {
            var url = "/HouseModule/Ho_PartnerUser/Form?KeyValue=" + KeyValue;
            openDialog(url, "Form", "编辑合伙人", 800, 460, function (iframe) {
                top.frames[iframe].AcceptClick();
            });
        }
    }
    //删除
    function btn_delete() {
        var KeyValue = GetJqGridRowValue("#gridTable", "Number");
        if (IsDelData(KeyValue)) {
            var delparm = 'KeyValue=' + KeyValue;
            delConfig('/HouseModule/Ho_PartnerUser/Delete', delparm, KeyValue.split(",").length);
        }
    }
    //明细
    function btn_detail() {
        var KeyValue = GetJqGridRowValue("#gridTable", "Number");
        if (IsChecked(KeyValue)) {
            var url = "/HouseModule/Ho_PartnerUser/Detail?KeyValue=" + KeyValue;
            Dialog(url, "Detail", "合伙人明细", 800, 460, function (iframe) {
                top.frames[iframe].AcceptClick();
            });
        }
    }
    //刷新
    function windowload() {
        $("#gridTable").trigger("reloadGrid"); //重新载入
        
    }
    //搜索
    function btn_Search() {
        var keywords = $("#keywords").val();
        $("#gridTable").jqGrid('setGridParam', {
            url: "@Url.Content("~/HouseModule/Ho_PartnerUser/GridPageListJson")?Keyword=" + keywords, page: 1
    }).trigger('reloadGrid');
    }
    //禁用
    function DisableUser() {
        var KeyValue = GetJqGridRowValue("#gridTable", "Number");
        if (IsDelData(KeyValue)) {
            var delparm = 'KeyValue=' + KeyValue;
            OpConfig('/HouseModule/Ho_PartnerUser/DisableUser', delparm, "确定要禁用此合伙人么?");
        }
    }
</script>
<!--工具栏-->
<div class="tools_bar leftline rightline" style="margin: 1px; margin-bottom: 0px;">
    <div class="PartialButton">
        @Html.Partial("_PartialButton")
    </div>
</div>
<div class="leftline rightline QueryArea" style="margin: 1px; margin-top: 0px; margin-bottom: 0px;">
    <table border="0" class="form-find" style="height: 45px;">
        <tr>
            <th>关键字：</th>
            <td>
                <input id="keywords" type="text" class="txt" style="width: 200px" />
            </td>
            <td>
                <input id="btnSearch" type="button" class="btnSearch" value="搜 索" onclick="btn_Search()" />
            </td>
        </tr>
    </table>
</div>
<div class="topline rightline" style="margin: 1px; margin-top: -1px;">
    <table id="gridTable"></table>
    <div id="gridPager"></div>
</div>