@{
    ViewBag.Title = "Am_Ammeter";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<script type="text/javascript">
    $(function () {
        GetGrid();
    })
    //加载表格
    function GetGrid() {
        $("#gridTable").jqGrid({
        url: "@Url.Content("~/AmmeterModule/Am_Ammeter/GridPageJson")",
        datatype: "json",
        height: $(window).height() - 149,
        autowidth: true,
        colModel: [
                { label: 'Number', name: 'Number', index: 'Number', width: 0, align: 'left', hidden: true },
                { label: '电表号', name: 'AM_Code', index: 'AM_Code', width: 0, align: 'left'  },
                { label: '电表类型', name: 'AmmeterType_Name', index: 'AmmeterType_Name', width: 0, align: 'left'  },
                { label: '价格', name: 'AmmeterMoney_Name', index: 'AmmeterMoney_Name', width: 0, align: 'left' },
                { label: '采集器编号', name: 'Collector_Code', index: 'Collector_Code', width: 0, align: 'left'  },
                { label: '租户帐号', name: 'UserName', index: 'UserName', width: 0, align: 'left' },
                { label: '租户姓名', name: 'U_Name', index: 'U_Name', width: 0, align: 'left' },
                { label: '省', name: 'Province', index: 'Province', width: 0, align: 'left',sortable: true  },
                { label: '市', name: 'City', index: 'City', width: 0, align: 'left',sortable: true  },
                { label: '区', name: 'County', index: 'County', width: 0, align: 'left',sortable: true  },
                { label: '单元', name: 'Cell', index: 'Cell', width: 0, align: 'left',sortable: true  },
                { label: '楼层', name: 'Floor', index: 'Floor', width: 0, align: 'left',sortable: true  },
                { label: '房号', name: 'Room', index: 'Room', width: 0, align: 'left',sortable: true  },
                { label: '地址', name: 'Address', index: 'Address', width: 0, align: 'left'  },
                { label: '状态', name: 'StatusStr', index: 'StatusStr', width: 0, align: 'left',sortable: true  },
                { label: '安装时间', name: 'CreateTime', index: 'CreateTime', width: 0, align: 'left',sortable: true  },
                { label: '一级预警', name: 'FirstAlarm', index: 'FirstAlarm', width: 0, align: 'left'  },
                { label: '电表余额', name: 'Money', index: 'Money', width: 0, align: 'left' },
                { label: '业主帐号', name: 'UY_UserName', index: 'UY_UserName', width: 0, align: 'left'  },
                { label: '业主姓名', name: 'UY_Name', index: 'UY_Name', width: 0, align: 'left' },
        ],
        pager: "#gridPager",
        sortname: 'CreateTime',
        sortorder: 'desc',
        rownumbers: true,
        shrinkToFit: false,
        gridview: true,
    });
}
    //删除
    function btn_delete() {
        var KeyValue = GetJqGridRowValue("#gridTable", "AmmeterMoney_Number");
        if (IsDelData(KeyValue)) {
            var delparm = 'KeyValue=' + KeyValue;
            delConfig('/AmmeterModule/Am_Ammeter/Delete', delparm, KeyValue.split(",").length);
        }
    }
    //明细
    function btn_detail() {
        var KeyValue = GetJqGridRowValue("#gridTable", "AmmeterMoney_Number");
        if (IsChecked(KeyValue)) {
            var url = "/AmmeterModule/Am_Ammeter/Detail?KeyValue=" + KeyValue;
            Dialog(url, "Detail", "Am_Ammeter明细", 820, 500, function (iframe) {
                top.frames[iframe].AcceptClick();
            });
        }
    }
    //刷新
    function windowload() {
        $("#gridTable").trigger("reloadGrid"); //重新载入

    }
    //搜索
    function btn_Search() {
        var keywords = $("#keywords").val();
        var Stuts = $("#Stuts").val();
        var ProvinceId = "", CityId = "", CountyId = "";
        if (IsNullOrEmpty($("#ProvinceId").val())) {
            ProvinceId = $("#ProvinceId").find("option:selected").text();
        }
        if (IsNullOrEmpty($("#CityId").val())) {
            CityId = $("#CityId").find("option:selected").text();
        }
        if (IsNullOrEmpty($("#CountyId").val())) {
            CountyId = $("#CountyId").find("option:selected").text();
        }
        $("#gridTable").jqGrid('setGridParam', {
            url: "@Url.Content("~/AmmeterModule/Am_Ammeter/GridPageListJson")?Stuts=" + Stuts + '&Keyword=' + keywords +
                '&ProvinceId=' + ProvinceId + '&CityId=' + CityId + '&CountyId=' + CountyId, page: 1
    }).trigger('reloadGrid');
    }
    //要打印数据源，子页面调用的函数
    function PrintDataSource() {
        var columnModel = $("#gridTable").jqGrid('getGridParam', 'colModel');
        var dataModel = $("#gridTable").jqGrid("getRowData");
        //var footerData = $("#gridTable").jqGrid("footerData");
        var JsonData = {
            columnModel: columnModel,
            dataModel: dataModel,
            //footerData: footerData,
        }
        return JsonData;
    }
    //点击打印
    function btn_Print() {
        PrintDialog("/Utility/PrintPage", "PrintPage", "打印当前页", 1200, 500, function (iframe) {
            top.frames[iframe].SubmitPrint()
        });
    }
    //导出Excel
    function btn_derive() {
        //SetDeriveExcel("#gridTable", "订单信息");
        //openDialog("/CommonModule/ExcelImport/DeriveDialog", "DeriveDialog", "订单信息", 600, 300, function (iframe) {
        //    top.frames[iframe].AcceptClick();
        //});
        //var SelectedField = ""; $('#AccessView .selected a').each(function () { SelectedField += $(this).attr('id') + ","; });
        Loading(true, "正在处理要导出数据...");
        var keywords = $("#keywords").val();
        var Stuts = $("#Stuts").val();
        var ProvinceId="", CityId="", CountyId="";
        if (IsNullOrEmpty($("#ProvinceId").val())) {
            ProvinceId = $("#ProvinceId").find("option:selected").text();
        }
        if (IsNullOrEmpty($("#CityId").val())) {
            CityId = $("#CityId").find("option:selected").text();
        }
        if (IsNullOrEmpty($("#CountyId").val())) {
            CountyId = $("#CountyId").find("option:selected").text();
        }
        window.setTimeout(function () {
            location.href = "/AmmeterModule/Am_Collector/ExportExcel??Keyword=" + keywords + '&Stuts=' + Stuts +
                '&ProvinceId=' + ProvinceId + '&CityId=' + CityId + '&CountyId=' + CountyId;
            Loading(false);
        }, 200);
    }
</script>
<div id="layout" class="layout">
    <!--左边-->
    <div class="layoutPanel layout-west">
        <div class="btnbartitle">
            <div>
                组织结构
            </div>
        </div>
        <div class="ScrollBar" id="ItemsTree"></div>
    </div>
    <!--中间-->
    <div class="layoutPanel layout-center">
        <div class="btnbartitle">
            <div>
                用户列表 <span id="CenterTitle"></span>
            </div>
        </div>
        <!--工具栏-->
        <div class="tools_bar" style="border-top: none; margin-bottom: 0px;">
            <div class="PartialButton">
                @Html.Partial("_PartialButton")
            </div>
        </div>
        <!--列表-->
        <div id="grid_List">
            <div class="bottomline QueryArea" style="margin: 1px; margin-top: 0px; margin-bottom: 0px;">
                <table border="0" class="form-find" style="height: 45px;">
                    <tr>
                        <th>关键字：
                        </th>
                        <td>
                            <input id="keywords" type="text" class="txt" style="width: 200px" />
                        </td>
                        <td>
                            <input id="btnSearch" type="button" class="btnSearch" value="搜 索" onclick="btn_Search()" />
                        </td>
                    </tr>
                </table>
            </div>
            <table id="gridTable"></table>
            <div id="gridPager"></div>
        </div>
    </div>
</div>
